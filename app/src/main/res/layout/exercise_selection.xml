<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_pink"
    tools:context=".ExerciseSelection"
    tools:ignore="MissingClass">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="ATHLETIC_FIELD"
        android:textColor="#4C5CAF"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/big_padding"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/Latpull"
                android:layout_width="368dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:background="@drawable/latpulldown_img" />

            <ImageButton
                android:id="@+id/Bench"
                android:layout_width="368dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="21dp"
                android:background="@drawable/bench_img" />

            <ImageButton
                android:id="@+id/Squat"
                android:layout_width="368dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="21dp"
                android:background="@drawable/squat_img" />

            <ImageButton
                android:id="@+id/Plank"
                android:layout_width="368dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="21dp"
                android:background="@drawable/plank_img" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>